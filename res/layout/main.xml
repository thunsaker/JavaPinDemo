	<Button
        android:id="@+id/btnPopularList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_below="@id/lblWelcome"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:text="@string/popular_list_btn_text"
        android:onClick="StartPopularList" />

    <EditText 
        android:id="@+id/txtUsername"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnPopularList"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:inputType="text" 
        android:hint="@string/username_edit_text" />
    
	<Button
        android:id="@+id/btnGetUserInfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtUsername"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:text="@string/username_btn_text"
        android:onClick="GetUserInfo" />
