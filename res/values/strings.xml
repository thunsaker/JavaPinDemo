    <plurals name="following_count">
        <item quantity="one">Following 1</item>
        <item quantity="other">Following %d</item>
    </plurals>
    <plurals name="pin_count">
    	<item quantity="one">1 Pin</item>
    	<item quantity="other">%d Pins</item>
    </plurals>
    <plurals name="like_count">
    	<item quantity="one">1 Like</item>
    	<item quantity="other">%d Likes</item>
    </plurals>
    <plurals name="board_count">
    	<item quantity="one">1 Board</item>
    	<item quantity="other">%d Boards</item>
    </plurals>
    
    <!-- scope: read or read_write -->
    <string name="authorizeUrl">https://pinterest.com/oauth/authorize/?client_id=%1$s&amp;redirect_uri=%2$s&amp;scope=read_write</string>
